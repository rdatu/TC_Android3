<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/parent_border" >

    <EditText
        android:id="@+id/eventname_inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_eventname" />

    <EditText
        android:id="@+id/eventdesc_inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventname_inputText"
        android:hint="@string/hint_eventdesc" />

    <Button
        android:id="@+id/datetimeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventdesc_inputText" />

    <Button
        android:id="@+id/eventAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/confirmButton" />

</RelativeLayout>